<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--by type we need to give bean name same as per our class variable name where we want to inject the dependency-->
    <!--<bean name="stu" class="com.autowiring.xmlbased.Student" p:id="101" p:name="Manish Bhawsar" autowire="byName"/>-->
   <!-- <bean name="cour" class="com.autowiring.xmlbased.Course" p:id="1" p:courseName="Java" p:duration="6"/>
    &lt;!&ndash;<bean name="stu" class="com.autowiring.xmlbased.Student" p:id="101" p:name="Manish Bhawsar" autowire="byType"/>&ndash;&gt;
    <bean name="stu" class="com.autowiring.xmlbased.Student" p:id="101" p:name="Manish" autowire="constructor"/>-->

    <bean name="course" class="com.springcore.autowiring.xmlbased.Course" primary="true">
       <constructor-arg name="id" value="1"/>
        <constructor-arg name="courseName" value="Java"/>
        <constructor-arg name="duration" value="6"/>
    </bean>

    <bean name="course2" class="com.springcore.autowiring.xmlbased.Course">
        <constructor-arg name="id" value="2"/>
        <constructor-arg name="courseName" value="Python"/>
        <constructor-arg name="duration" value="3"/>
    </bean>

    <bean name="stu" class="com.springcore.autowiring.xmlbased.Student" autowire="constructor">
        <constructor-arg name="id" value="101"/>
        <constructor-arg name="name" value="manish"/>

    </bean>
</beans>