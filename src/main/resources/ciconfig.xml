<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="ad" class="com.ci.Address">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="city" value="Bhopal"/>
    </bean>

    <bean name="stu" class="com.ci.Student">
        <constructor-arg name="id" value="101"/>
        <constructor-arg name="name" value="Manish Bhawsar"/>
        <constructor-arg ref="ad"/>
        <constructor-arg name="course">
            <list>
                <value>Java</value>
                <value>Python</value>
            </list>
        </constructor-arg>
    </bean>

</beans>